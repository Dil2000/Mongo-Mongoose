		
		<div class="jumbotron">
		  <div class="row">
			<div class = "col-md-6">
			  <h1>Tech News</h1>
			  <p>scraped from techcrunch.com</p>
			</div>
			<div class = "col-md-6">
				<img src = "/img/hp.gif" width="80%" height="auto">
			</div>
		  </div>
		</div>

		<div class = "row">

		  {{#each articles}}
			<div class = "col-md-8">
			  <form action="article/{{this._id}}" method="POST">
				<div class="panel panel-default-left">
				  <a href="{{this.link}}" class="list-group-item active" target="_blank">
				  	<div class="panel-heading">				  
					  <h3 class="panel-title">{{this.title}}</h3>
					</div>
				  </a>
				  <div class="panel-body">
				    <p id = {{this._id}}>{{this.data}}</p>
				    <button class="btn btn-warning btn-xs" type="submit">Delete</button>
				  </div>
				</div>
			  </form>
			</div>
				
			<div class = "col-md-4">
			  <div id ="notes">
			  	<form action="/{{this._id}}" method="POST">
			  	  <h1>Notes</h1>
			  	  <h3>Title : <input type="text" name="title" value="{{this.note.title}}"></h3>
			  	  <p>Note : <input type="text" name="comment" class="form-control" value="{{this.note.body}}"></P>
			  	  <button class="btn btn-success btn-xs" type="submit">Submit</button>                  
                </form>
                <form action="notes/{{this._id}}" method="POST">
                	<button class="btn btn-warning btn-xs" type="submit">Delete</button>
               	</form>
			  </div>
			</div>
	
		  {{/each}}  

		<!--<form action="/delete" method="POST">				
             <button class="btn btn-warning btn-xs" type="reset">Delete</button>
		</form>-->

		</div>


