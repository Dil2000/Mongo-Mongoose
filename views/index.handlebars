		
		<div class="jumbotron">
			<div class="container text-center">
			  <div class="row">
				<div class = "col-md-6">
				  <h1>Tech News</h1>
				  <h3>TechCrunch</h3>
				  <p>The latest technology news and information on startups</p>
				</div>
				<div class = "col-md-6">
					<img src = "/img/hp.gif" width="30%" height="auto">
				</div>
			  </div>
			</div>
		</div>

		<div class="container text-center">
		  <div class = "row">
		    {{#each articles}}
			  <div class = "col-md-12 text-left">			  
				<div class = "panel">				  
				  <div class="panel-heading">
				  	<div class = "row">		
				  	  <div class="col-md-10">
				  	  	<a href="{{this.link}}" target="_blank">
						   <h4><div class="panel-title">{{this.title}}</div></h4>
						</a>
					  </div>
					  <div class= "col-md-2">
						<form action="article/{{this._id}}" method="POST">
						  <button class="btn btn-danger" type="submit">Delete Article</button>
		                </form>
		              </div>
		            </div>
				  </div>
	
				  <div class="panel-body">
					<div class = "row">
					  <div class = "col-md-12">
					  	 <p id = {{this._id}}>{{this.data}}</p>
					  </div>
					</div>
					<div class ="row" id="NotesButton">
					   {{!-- <button class="btn btn-default"><i class="fa fa-pencil-square-o" aria-hidden="true"> Notes</i></button> --}}
					   <h5>  Notes - Title & Notes</h5><br/>
					</div>
					<div class = "row" class="noteBackground" id="{{this._id}}">
					  <form action="/{{this._id}}" method="POST">
					    <div class = "col-md-3"> 
					       <input type="text" name="title" class="form-control" value="{{this.note.title}}">
					    </div>
						<div class ="col-md-7">
						   <input type="text" name="comment" class="form-control" value="{{this.note.body}}">	
						</div>
						<div class="col-md-1">
						   <button class="btn btn-success btn-xs" type="submit">Submit Note</button>
						</div>
					  </form>
					  <form action="note/{{this.note._id}}" method="POST">
					  	<div class="col-md-1">
					  	  <button class="btn btn-warning btn-xs" type="submit">Delete Note</button>
					  	</div>
		              </form>  
					</div>				    
			  	  </div>
				</div>			  
			  </div>				
    		{{/each}}  
		  </div>
		</div>


		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    	<script src="/app.js"></script>
